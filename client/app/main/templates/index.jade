extends ../layout

block content
  header#banner.hero-unit
    .container
      h1 Bon App√©tit!
      p.lead Cook anything with your personal CookingBuddy
      img(src='assets/images/yeoman.png', alt="I'm Yeoman")
  .container
    .row
      .col-lg-12
        h1.page-header Recipes:
          span.small
            form.form-inline.pull-right
              input(ng-model='query', type='text', placeholder='Search', autofocus='')
        .row
          .col-sm-6.col-md-6.col-lg-6
            ul.nav.nav-tabs.nav-stacked
              li(ng-repeat="recipe in recipeService.allRecipes | limitTo: recipeService.allRecipes.length/2 | filter:query | orderBy: 'name'")
                a(href='', tooltip='{{recipe.name}}', ng-click='viewRecipe(recipe)') {{recipe.name}}
                img.img-responsive(ng-src='{{ recipe.image }}')
